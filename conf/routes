# access to top page
GET         /                           controllers.GuestHomeController.index()

# signup用
GET         /signup                     controllers.SignUpController.signupStart
POST        /signup/mail                controllers.SignUpController.signupMail
GET         /signup/verify_email        controllers.SignUpController.signup(token: String)
POST        /signup/confirm             controllers.SignUpController.signupConfirm
POST        /signup/regist              controllers.SignUpController.signupFinish

# signin用
GET         /signin                     controllers.SignInController.startSignin
POST        /signin                     controllers.SignInController.signin
GET         /forgotpass                 controllers.ForgotPasswordController.startForgotPass
POST        /forgotpass/mail            controllers.ForgotPasswordController.forgotpassMail
GET         /forgotpass/reset           controllers.ForgotPasswordController.forgotpassreset
POST        /forgotpass                 controllers.ForgotPasswordController.forgotpass

GET         /home                       controllers.RegisteredHomeController.home
GET         /index                      controllers.RegisteredHomeController.index
GET         /nearby                     controllers.RegisteredHomeController.nearBy
GET         /notification               controllers.RegisteredHomeController.notification
GET         /bookmark                   controllers.RegisteredHomeController.bookmark

GET         /event                      controllers.EventController.search
GET         /event/findoffset           controllers.EventController.findOffset
GET         /event/:uid/:eventId              controllers.EventController.findOne(uid:String,eventId:String)
POST        /events                     controllers.EventController.create

# signout用
GET         /signout                    controllers.RegisteredHomeController.signout

GET         /assets/*file               controllers.Assets.at(path="/public", file)

