# access to top page
GET         /                           controllers.TopController.index()

# signup用
GET         /signup                     controllers.SignUpController.signupStart
POST        /signupmail                 controllers.SignUpController.signupMail
GET         /signup/input               controllers.SignUpController.signup(tokenID: String)
POST        /signup/confirm             controllers.SignUpController.signupConfirm
POST        /signup/finish              controllers.SignUpController.signupFinish

# signin用
POST        /signinstart                controllers.SignInController.startSignin
POST        /signin                     controllers.SignInController.signin
GET         /forgotpass                 controllers.ForgotPasswordController.startForgotPass
POST        /forgotmail                 controllers.ForgotPasswordController.forgotpassMail
GET         /forgotpass/reset           controllers.ForgotPasswordController.forgotpassreset
POST        /forgotpass                 controllers.ForgotPasswordController.forgotpass

GET         /testhome                   controllers.TopController.testHome
GET         /testindex                  controllers.TopController.testIndex
GET         /testnearby                 controllers.TopController.testNearby
GET         /testnotification           controllers.TopController.testNotification
GET         /testbookmark               controllers.TopController.testBookmark


GET         /secured                    controllers.TopController.secured

# signout用
GET         /signout                    controllers.TopController.signout

GET         /signin/api                 controllers.SignInController.apisignin

GET         /assets/*file               controllers.Assets.at(path="/public", file)

